---
import { Image } from "astro:assets";
import Base from "@/layouts/Base.astro"; // Use original layout
import Post from "@/layouts/partials/Post.astro"; // Use original Post partial
import Pagination from "@/layouts/components/Pagination.astro"; // Use original Pagination
import { getSinglePage } from "@/lib/contentParser.astro"; // Use original lib functions
import { sortByDate } from "@/lib/utils/sortFunctions";
import { getEntry } from "astro:content";
import type { CollectionEntry } from "astro:content";
import config from "@/config/config.json";

// Fetch all blog posts
const posts = await getSinglePage("blog");
const sortedPosts = sortByDate(posts);

// Pagination
const totalPages = Math.ceil(posts.length / config.settings.pagination);
const currentPosts = sortedPosts.slice(0, config.settings.pagination); // Show first page
---

<Base>
  <section class="section">
    <div class="container">
      <div class="text-center">
        <h1 class="font-primary font-bold text-4xl md:text-5xl">
          SGE Analytics Blog
        </h1>
        <p class="mt-4 text-lg">
          Latest insights on digital marketing, SEO, and data-driven strategies.
        </p>
      </div>

      {/* Main Post Grid */}
      <div class="row mt-16 justify-center">
        {currentPosts.map((post) => (
          <div class="col-12 mb-8 sm:col-6 lg:col-4">
            <Post post={post} />
          </div>
        ))}
      </div>

      {/* Pagination */}
      <Pagination section={"blog"} currentPage={1} totalPages={totalPages} />
    </div>
  </section>
</Base>